<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0px"
    android:paddingLeft="0px"
    android:paddingRight="0px"
    android:paddingTop="0px"
    tools:context="com.thomasgarver.rockets.MainActivity">

    <com.thomasgarver.rockets.PlanetView
        android:id="@+id/planet_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </com.thomasgarver.rockets.PlanetView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/button_row_1"
            android:layout_width="match_parent"
            android:layout_height="120px"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">
            <Button
                android:id="@+id/zoom_out"
                android:layout_alignParentLeft="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-" />
            <Button
                android:id="@+id/zoom_in"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+" />
            <Button
                android:id="@+id/decrease_warp"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-" />
            <Button
                android:id="@+id/increase_warp"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/button_row_2"
            android:layout_width="match_parent"
            android:layout_height="120px"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_below="@+id/button_row_1">
            <Button
                android:id="@+id/decrease_angle"
                android:layout_alignParentLeft="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-" />
            <Button
                android:id="@+id/increase_angle"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+" />
        </LinearLayout>
        </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120px"
        android:layout_alignParentBottom="true"
        android:background="#999999"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp">
        <TextView
            android:id="@+id/timer"
            android:layout_width="0dp"
            android:layout_weight="0.25"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:textColor="#FFFFFF"
            android:text="00:00:00"
            android:textSize="25dp"
            android:paddingLeft="5dp"/>
        <TextView
            android:id="@+id/altitude"
            android:layout_width="0dp"
            android:layout_weight="0.375"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="false"
            android:textColor="#FFFFFF"
            android:text="Alt: 0m"
            android:textSize="25dp"
            android:paddingLeft="5dp"/>
        <TextView
            android:id="@+id/velocity"
            android:layout_width="0dp"
            android:layout_weight="0.375"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="false"
            android:textColor="#FFFFFF"
            android:text="V: 0.0 m/s"
            android:textSize="25dp"
            android:paddingLeft="5dp"/>
    </LinearLayout>
</RelativeLayout>
